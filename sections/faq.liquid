{{ 'section-faqs.css' | asset_url | stylesheet_tag }}

<!-- questions -->
<div class="page-width page-width--narrow" id="faq">
  <h1 class="main-page-title page-title h0">
   {{section.settings.heading}}
  </h1>

    {% for block in section.blocks %}
    {%if block.type == "QA" %}
    <!-- single question -->
    <article class="question">
     <!-- question title -->
        <div class="question-title">
        <input type="checkbox" id="question-{{forloop.index}}" class="question-toggle">
        <label for="question-{{forloop.index}}" class="question-label">{{block.settings.question}}</label>
            <div class="answer">
              <p>
                {{block.settings.answer}}
              </p>
            </div>
             </div>
        </article>
          <!-- end of single question -->
          <!-- single question -->
  
{% elsif block.type == "Headline" %}
<h2 class="faq-titles">{{block.settings.headline}}</h2>
{% endif %}
{%endfor %}
</div>

 
{% schema %}
{
    "name": "FAQ Blocks",
    "settings":
        [
            {
                "type": "text",
                "label": "Heading for Section",
                "id": "heading"
            }
        ],
    "blocks":
        [
            {
                "type": "QA",
                "name": "Question/Answer",
                "settings":
                    [
                        {
                            "type": "text",
                            "label": "title internal only",
                            "id": "title"
                        },
                        {
                            "type": "text",
                            "label": "Customer Question",
                            "id": "question"
                        },
                        {
                            "type": "richtext",
                            "label": "Answer",
                            "id": "answer"
                        }
                    ]
            },
            {
                "type": "Headline",
                "name": "Topic",
                "settings":
                    [
                        {
                            "type": "text",
                            "label": "headline",
                            "id": "headline"
                        }
                    ]
            }
        ],
        "presets":[
            {
                "category": "Questions",
                "name": "Question and Answer Blocks"
            }
        ]
}
{% endschema %}